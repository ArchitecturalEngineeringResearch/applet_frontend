.date{
    color:#888888;
    font-size: 10pt;
}

.content{
  background: #fff;
  padding: 8px;
  color: #353535;
  font-size: 12pt;
}

.comment{
  background: #fff;
  padding: 8px;
  color: #353535;
  font-size: 12pt;
}

.comment .title{
  font-size: 10pt;
  color:#888888;
  margin-bottom: 5px;
}
.comment-chunk{
  height: 10vh;
}