/* pages/detailsPage/detailsPage.wxss */

page{
  background-color:#F8F8F8;
}
.fixed-bottom {
  position: fixed;
  bottom: 0px;
  height: 9vh;
  width: 100%;
  border-top: 1px solid #e7e7eb;
  display: flex;
  align-items: center;
}
.fa-star-color{
  color:#ffc53f;
}
.fa-thumbs-up-color{
  color:#09bb07;
}
.call {
  background: #09bb07;
  height: 80%;
  width: 30vw;
  color: #fff;
  display: flex;
  align-items: center;
}

.call text {
  text-align: center;
  width: 100%;
}

.fixed-bottom-chunk{
   height: 100%;
   width: 17vw;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
}
.fixed-bottom-chunk view{
  width: 50%;
  height: 50%;
  display: flex;
  text-align: center;
  line-height: 100%;
  align-items: center;
  justify-content: center;

}
.fixed-bottom-chunk text{
  color: #888888;
  font-size: 10pt;
}

.account {
  height: 10vh;
  background-color: #fff;
  margin: 0 0 5px 0;
  display: flex;
  align-items: center;
  padding-left: 10px;
  padding-right: 10px;
  border-bottom: 1px solid #e7e7eb;
  padding-bottom: 10px;
}

.account .left {
  border-radius: 50%;
  background: rebeccapurple;
  height: 10vh;
  width: 10vh;
}

.account .right {
  margin-left: 5px;
  display: flex;
  flex-direction:column;
  height: 100%;
}

.account .right {
  flex-grow:1;
  height: 100%;
}
.right .user{
  display: flex;
  align-items: center;
  justify-content:space-between;
  flex-grow:1;
}

.right .loca{
  flex-grow:1;
  color:#888888;
  font-size: 8pt;
  display: flex;
  justify-content: space-between;
}
