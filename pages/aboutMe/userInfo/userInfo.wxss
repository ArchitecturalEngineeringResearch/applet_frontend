.comment-item image{
  width: 30pt;
  height: 30pt;
  position: absolute;
  left: 8pt;
  top: 5pt;
}

.item-content{
  font-size: 12pt;
  line-height: 18pt;
}
.user-name{
  color: #999;
}
.msg-content{
  color: #333;
}
.msg-info{
  font-size: 8pt;
  color: #999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.msg-replay{
  border-radius: 5pt;
  background-color: #EEEEEE;
  font-size: 12pt;
  line-height: 18pt;
  color: #999;
  padding: 5pt 10pt;
  margin-bottom: 10pt;
}
.msg-replay text{
  color: #0CC8A0
}
.division-line{
  display: block;
  width: 100%;
  height: 1px;
  background-color: #eeeeee;
}