@import '../../../style/xiaogongicon.wxss';
@import '../../../component/mainCard-component/mainCard-component.wxss';

page{
  height: 100%;
  background-color: #f8f8f8;
}
.wrap{
  height: 100%;
  overflow-y: scroll;
}

.top{
  background-color: #fff;
}
.top image{
  display:block;
  border-radius:50%;
  width:45pt;
  height:45pt;
  padding: 20pt 0;
  margin: 0 auto;
}
.amount{
  width: 225pt;
  margin: 0 auto;
  display: flex ;
  flex-direction: row;
  justify-content:center;
  padding-bottom: 10pt;
}
.amount-group{
  width: 75pt;
  text-align: center;
  font-size: 10pt;
}
.amount-group text{
  display: block;
}
.center{
  border-left: 1pt solid #ccc;
  border-right: 1pt solid #ccc;
}
.group-title{
  line-height: 18pt;
}
.amount-group .number{
  font-size: 8pt;
  color: #666;
}

.card-wrap{
  margin-bottom: 10pt;
}
.card{
  height: auto;
  margin-top: 8pt;
  padding: 10pt;
}

.bottom-comment{
  background-color: #fff;
}
.bottom-comment .title{
  font-size: 12pt;
  line-height: 18pt;
  text-indent: 16pt;
  border-bottom: 1pt solid #eeeeee;
}

.comment-item{
  position: relative;
  padding: 10pt 10pt 0 57pt;
}
