@import '../../../style/xiaogongicon.wxss';
@import '../../../component/mainCard-component/mainCard-component.wxss';

page{
  height: 100%;
  background-color: #f8f8f8;
}
.wrap-box{
  height: 100%;
  overflow-y: scroll;
}
.card{
  height: auto;
  margin-top: 8pt;
  padding: 20pt 9pt 15pt;
  font-size: 12pt;
}
.head{
  display: flex;
  justify-content:space-between;
}
.head .avatar image{
  width: 40pt;
  height: 40pt;
}
.user-info{
  display: flex;
  flex-direction:column;
}
.user-info .time{
  font-size: 8pt;
  color: #999 !important;
}
.replay-btn{
  width: 40pt;
  height: 24pt;
  font-size: 12pt;
  line-height: 2;
  padding: 0;
  margin: 0;
  vertical-align:middle;
}
.content{
  margin: 0;
  padding: 0;
}
.replay{
  font-size: 12pt;line-height: 18pt;
}
.send-to{
  color: rgb(91, 196, 91);
}
.replay-from{
  width: 100%;
  height: 50pt;
  display: flex;
  position: relative;
}
.replay-from image{
  width: 50pt;
  height: 50pt;
  position: absolute;
  left: 0;
}
.msg-from{
  padding-left: 60pt;
  background-color: #f8f8f8;
}
.msg-at{
  font-size: 12pt;
  line-height: 18pt;
}
.msg-from .body{
  font-size: 8pt;
  line-height: 12pt;
  -webkit-line-clamp:2;
}