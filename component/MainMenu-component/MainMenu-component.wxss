/* component/MainMenu-component/MainMenu-component.wxss */
.swiper{
  height: 100%;
  position: absolute;
  width: 35%;
  right: 0;
}
swiper-item{
  display: table;
  text-align: center;
}
swiper-item text{
  display: table-cell;
  vertical-align: middle;
  color: #353535;
}
.switchover{
  position: absolute;
  left: 10px;
  top: 0;
  bottom: 0;
  margin: auto 0;
  width: 33%;
  border-radius: 100px;
  border:1px solid #09bb07;
  height: 55%;
  display:table;
  background: #09bb07;
  box-shadow: 1px 1px 1px 0px rgba(0,0,0,0.3) inset
}
.switchover .ball{
  position: absolute;
  background: #ffffff;
  height: 100%;
  width: 50%;
  border-radius: 100px;
  transition:all 0.4s ease-in;
}
.switchover  text{
  text-align: center;
  display:table-cell;
  vertical-align:middle;
  font-size:11pt;
  position: relative;
  color: #e8e8e8;
  transition:all 0.4s ease-in 100ms;
}
